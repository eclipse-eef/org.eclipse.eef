<plugin>

   <extension point="org.eclipse.emf.edit.itemProviderAdapterFactories">
      <factory
            uri="http://www.eclipse.org/emf/samples/eef/1.0.0"
            class="org.eclipse.emf.samples.conference.provider.ConferenceItemProviderAdapterFactory"
            supportedTypes=
              "org.eclipse.emf.edit.provider.IEditingDomainItemProvider
               org.eclipse.emf.edit.provider.IStructuredItemContentProvider
               org.eclipse.emf.edit.provider.ITreeItemContentProvider
               org.eclipse.emf.edit.provider.IItemLabelProvider
               org.eclipse.emf.edit.provider.IItemPropertySource"/>
   </extension>

  <!-- EEF extensions -->
   <extension point="org.eclipse.emf.edit.itemProviderAdapterFactories">
      <factory
            uri="http://www.eclipse.org/emf/samples/eef/1.0.0"
            class="org.eclipse.emf.samples.conferences.providers.ConferencePropertiesEditingProvider"
            supportedTypes="org.eclipse.emf.eef.runtime.binding.PropertiesEditingComponent"/>
   </extension>

  <!-- Tabbed properties views extension -->
   <extension
         point="org.eclipse.ui.views.properties.tabbed.propertyContributor">
      <propertyContributor
            contributorId="org.eclipse.emf.samples.conference.properties"
            labelProvider="org.eclipse.emf.eef.runtime.ui.view.section.EEFLabelProvider">
         <propertyCategory
               category="eef">
         </propertyCategory>
      </propertyContributor>
   </extension>
   <extension
         point="org.eclipse.ui.views.properties.tabbed.propertyTabs">
      <propertyTabs
            contributorId="org.eclipse.emf.samples.conference.properties">
         <propertyTab
               id="Identity"
               label="Identity"
               category="eef">
         </propertyTab>
         <propertyTab
               afterTab="Identity"
               category="eef"
               id="Conference"
               label="Conference">
         </propertyTab>
      </propertyTabs>
   </extension>
   <extension
         point="org.eclipse.ui.views.properties.tabbed.propertySections">
      <propertySections
            contributorId="org.eclipse.emf.samples.conference.properties">
         <propertySection
               class="org.eclipse.emf.eef.runtime.ui.view.section.SectionPropertiesEditingView"
               id="org.eclipse.emf.samples.conference.section.PersonIdentity"
               tab="Identity">
            <input
                  type="org.eclipse.emf.samples.conference.Person">
            </input>
         </propertySection>
         <propertySection
               class="org.eclipse.emf.eef.runtime.ui.view.section.SectionPropertiesEditingView"
               id="org.eclipse.emf.samples.conference.section.PersonConference"
               tab="Conference">
            <input
                  type="org.eclipse.emf.samples.conference.Person">
            </input>
         </propertySection>
      </propertySections>
   </extension>
</plugin>
